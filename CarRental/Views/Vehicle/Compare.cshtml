@model List<Vehicle>

<div class="row">
    @foreach (var vehicleGroup in Model.Chunk(2))  // Group vehicles into pairs
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr class="text-center">
                        <th></th> @* Header for the feature names column *@
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <th >
                                <img src="@Url.Content(vehicle?.ThumbnailUrl)" class="img-fluid" alt="@vehicle.Brand @vehicle.Model" style="height: 150px; object-fit: cover;" />
                                <h4 class="mt-2">@vehicle.Brand @vehicle.Model</h4>
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>License Plate</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.LicensePlate</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Fuel Type</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.FuelType</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Transmission</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.Transmission</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Manufacture Year</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.ManuYear.Year</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Number of Seats</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.NumberOfSeats</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Fuel Consumption</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.FuelConsumption / 100km</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Pickup Location</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.Location</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Rental Fee (Per Kilo)</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.RentalFeePerKilo</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Rental Fee (Per Day)</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>@vehicle.RentalFeePerDay</td>
                        }
                    </tr>
                    <tr>
                        <td><strong>Description</strong></td>
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>
                                <p class="text-muted">@vehicle.Description</p>
                            </td>
                        }
                    </tr>
                    <tr>
                        <td></td> @* Empty cell for alignment *@
                        @foreach (var vehicle in vehicleGroup)
                        {
                            <td>
                                <a asp-controller="Vehicle" asp-action="Rent" asp-route-id="@vehicle.RentalVehicleID" class="btn btn-primary w-100">Rent</a> @* Rent button *@
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>